{  
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",  
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "author": {
      "type": "string",
      "title": "The Author Schema ",
      "default": "",
      "examples": [
        "John Doe"
      ],
      "required": true
    },
    "title": {
      "type": "string",
      "title": "The Title Schema ",
      "default": "",
      "examples": [
        "This is John Doe"
      ]
    },
    "year": {
      "type": "string",
      "title": "The Year Schema ",
      "default": "",
      "examples": [
        "1987"
      ]
    }
  }
}